<!DOCTYPE html>
<html>
  <head>
    <title>Flashcards</title>
    <%= csrf_meta_tags %>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:700,600italic,400,400italic,600,300,300italic,700italic,800,800italic' rel='stylesheet' type='text/css'>

    <%= stylesheet_link_tag    'application', media: 'all' %>
  </head>

  <body>



  <nav class="navbar navbar-default">
    <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand brand brand-name-all navbar-left" href="/"><%= image_tag "CODEPOINTS_inverse.png", class: "nav-image" %>  </a>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav">
        <li><a href="<%=dashboard_index_path%>">Dashboard</a></li>
        <li><a href="<%=statistics_path%>">Statistics</a></li>
        <li><a href="<%=skills_path%>">Skills</a></li>
        <li><a href="<%=quizlet_index_path%>">Quizlet</a></li>
        <li><a href="<%=activity_index_path%>">Recent Activity</a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li class="navbar-custom"> <img src="<%= current_user.image %>", class="profile-photo"></li>
        <li class="navbar-custom"><%= link_to "Welcome, #{current_user.name}", account_path%></li>
        <li class="navbar-custom"><%= link_to "Logout", logout_path, method: :delete %></li>
      </ul>
    </div>
  </div>
</nav>


    <div class="sidebar col-sm-3">
      <div class="user-info container-fluid">
        <div class='col-sm-12 user-stats'>
          <h4> Points: <span class="number-circle" id="points-total"><%= current_user.points%></span> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Level: <span class="number-circle"> <%= current_user.level.to_s + " "%> </span></h4>
        </div>
      </div>

      <div class="container-fluid" id="log-session">
        <% if current_user.current_goals.count > 0 %>
          <h4>Log a Practice Session</h4>
          <%= form_for current_user do |f| %>
            <div class="form-group">
              <%= f.label :skill %>
              <%= select(:skill_nickname, :skill_id, current_user.session_form_options, {}, :id => "skill-id-session", :class=> "form-control") %>
              <% end  %>
              <label for="session-length">Duration</label>
              <select class="form-control session-length" id="session-length-log"></select>
            </div>
            <input class="btn btn-default pull-right" id="create-session" type="button" name="submit" value="Log Session">
        <% end %>
      </div>

      <div class="new-current-goal-form container-fluid">
        <div class="col-sm-2">
          <div class="arrow-down" target="new-current-goal"></div>
        </div>
        <div class="col-sm-10">
        <h4>Add Goal For This Week</h4>
        </div>
        <div class="side-form" id="new-current-goal">
          <%= render partial: "shared/new_goal_form" , locals: {week_num: current_week_number, type: "current"} %>
        </div>
      </div>


      <div class="new-next-goal-form container-fluid">
        <div class="col-sm-2">
          <div class="arrow-down" target="new-next-goal"></div>
        </div>
        <div class="col-sm-10">
          <h4>Add Goal For Next Week</h4>
        </div>
        <div class="side-form" id="new-next-goal">
          <%= render partial: "shared/new_goal_form" , locals: {week_num: next_week_number, type: "next"} %>
        </div>
      </div>

      <div class="container-fluid new-skill">
        <div class="col-sm-2">
          <div class="arrow-down" target="new-skill"></div>
        </div>
        <div class="col-sm-10">
        <h4>Add A Skill</h4>
        </div>
        <div class="side-form" id="new-skill">
          <%= render partial: "shared/new_skill" %>
        </div>
      </div>

    </div>

    <body class="<%= controller_name %> <%= action_name %>">
      <%= yield %>
    </div>

  </body>
  <%= javascript_include_tag 'application' %>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.1.3/Chart.bundle.min.js"></script>
</html>

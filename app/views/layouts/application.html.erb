<!DOCTYPE html>
<html>
  <head>
    <title>Flashcards</title>
    <%= csrf_meta_tags %>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:700,600italic,400,400italic,600,300,300italic,700italic,800,800italic' rel='stylesheet' type='text/css'>

    <%= stylesheet_link_tag    'application', media: 'all' %>
  </head>

  <body>
    <div class="container-fluid">
    <nav class="navbar navbar-custom" >
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="brand brand-name-all navbar-left" href="/">APP NAME</a>
      </div>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class ="nav navbar-nav">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
            aria-haspopup="true" aria-expanded="false">All <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><a href="#">Statistics</a></li>
              <li><a href="<%=skills_path%>">Skills</a></li>
              <% if current_user.quiz_id %>
                <li><a href="<%=quizlet_index_path%>">Quizlet</a></li>
              <% end %>
              <li><a href="<%=account_path %>">Account</a></li>
            </ul>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-custom navbar-right">
          <li class="navbar-custom"> <%= link_to "Welcome, #{current_user.name}"%></li>
          <li class="navbar-custom"><%= link_to "Logout", logout_path, method: :delete %></li>
        </ul>
      </div>
    </nav>
    </div>

    <div class="sidebar col-sm-3">

      <div class="user-info container-fluid">
        <div class="col-sm-3">
          <img src="<%= current_user.image %>", class="profile-photo">
        </div>
        <div class="col-sm-9">
        <h4><%= current_user.name %></h4>
      </div>


      </div>

      <div class="new-next-goal-form container-fluid">
        <h4>Add Goal For Next Week:</h4>
        <%= render partial: "shared/new_goal_form" , locals: {week_num: next_week_number, type: "next"} %>
      </div>

      <div class="new-current-goal-form container-fluid">
        <h4>Add Goal for This Week:</h4>
        <%= render partial: "shared/new_goal_form" , locals: {week_num: current_week_number, type: "current"} %>
      </div>

      <div class="container-fluid" id="log-session">
        <h4>Log a Practice Session</h4>
        <%= form_for current_user do |f| %>
          <div class="form-group">
            <%= f.label :skill %>
            <%= select(:skill_nickname, :skill_id, current_user.session_form_options, {}, :id => "skill-id-session", :class=> "form-control") %>
            <% end  %>
            <label for="session-length">Duration</label>
            <select class="form-control session-length" id="session-length-log"></select>
          </div>
          <input class="btn btn-default pull-right" id="create-session" type="button" name="submit" value="Log Session">
      </div>

      <%= render partial: "shared/new_skill" %>

    </div>

    <div class="">
      <%= yield %>
    </div>

  </body>
  <%= javascript_include_tag 'application' %>
</html>

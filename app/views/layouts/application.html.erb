<!DOCTYPE html>
<html>
  <head>
    <title>Flashcards</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if current_user  %>
      <p>Hello <%= current_user.uid %></p>
      <%= link_to "Logout", logout_path %>
    <% else %>
      <%= link_to "Login on Quizlet", quizlet_login_path %>
    <% end %>
    <%= yield %>
  </body>
</html>

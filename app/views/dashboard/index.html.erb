<h2>Current Goals</h2>
<div id="current-goals">
<% if @dashboard.current_goals %>
<%= render partial: "goal_list" , locals: {goals:  @dashboard.current_goals} %>
<% end %>
</div>

<div class="new-current-goal-form">
  <h2>Add a Goal for This Week</h2>
  <%= render partial: "new_goal_form" , locals: {week_num: current_week_number, type: "current"} %>
</div>

<h2>Next Week's Goals</h2>
<div id="next-goals">
<% if @dashboard.next_goals %>
  <%= render partial: "goal_list" , locals: {goals:  @dashboard.next_goals} %>
<% end %>
</div>

<div class="new-next-goal-form">
  <h2>Add a Goal for Next Week</h2>
  <%= render partial: "new_goal_form" , locals: {week_num: next_week_number, type: "next"} %>
</div>

<div id="current-sessions">
  <h2>Completed Sessions This Week:</h2>
  <% @dashboard.sessions.each do |session| %>
  <div class="session">
  <p><%= session.skill.nickname %>: <%= session.duration %> minutes, <%= days_from_today session.created_at %> ago</p>
  </div>
  <% end %>
</div>

<div id="log-session">
  <div class="row">
    <div class="col-sm-3">
      <%= form_for current_user do |f| %>
      <div class="form-group">
        <%= f.label :skill %>
        <%= select(:skill_nickname, :skill_id, current_user.session_form_options, {}, :id => "skill-id-session", :class=> "form-control") %>
        <% end  %>
        <label for="session-length">Duration</label>
        <select class="form-control session-length" id="session-length-log"></select>
      </div>
      <input class="btn btn-default pull-right" id="create-session" type="button" name="submit" value="Log Session">
    </div>
  </div>

</div>

</div>

<h2>Skills</h2>
<div id="skills">
<% if @dashboard.skills %>
  <% @dashboard.skills.each do |skill| %>
    <div class="skill">
      <h4><%= skill.nickname %></h4>
      <p><%= skill.description %></p>
    </div>
  <% end %>
<% end %>
</div>

<div class="row">
  <div class="col-sm-3">
    <div class="form-group">
      <h4>Add a Skill</h4>
      <label for="skill-nickname">Nickname</label>
      <input class="form-control" type="text" id="skill-nickname">
      <label for="skill-description">Description</label>
      <input class="form-control" type="text" id="skill-description">
      <input type="hidden" name="skill-user" id="skill-user" value="<%= current_user.id %>">
    </div>
    <input class="btn btn-default pull-right" id="create-skill" type="button" name="submit" value="Add Skill">
  </div>
</div>

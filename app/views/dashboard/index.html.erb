<h2>Goals</h2>
<div id="current-goals">
<% if @dashboard.current_goals %>
  <% @dashboard.current_goals.each do |goal| %>
    <div class="goal">
      <h4><%= goal.skill.nickname %></h4>
      <p><%= goal.num_sessions %> sessions</p>
      <p><%= goal.session_length %> minutes</p>
    </div>
  <% end %>
<% end %>
</div>

<h2>Add a New Goal for This Week</h2>
<%= render partial: "new_goal_form" , locals: {week_num: current_week_number, type: "current"} %>

<div id="next-goals">
<% if @dashboard.next_goals %>
  <% @dashboard.next_goals.each do |goal| %>
    <div class="goal">
      <h4><%= goal.skill.nickname %></h4>
      <p><%= goal.num_sessions %> sessions</p>
      <p><%= goal.session_length %> minutes</p>
    </div>
  <% end %>
<% end %>
</div>

<h2>Add a New Goal for Next Week</h2>
<%= render partial: "new_goal_form" , locals: {week_num: next_week_number, type: "next"} %>

<h2>Skills</h2>
<div id="skills">
<% if @dashboard.skills %>
  <% @dashboard.skills.each do |skill| %>
    <div class="skill">
      <h4><%= skill.nickname %></h4>
      <p><%= skill.description %></p>
    </div>
  <% end %>
<% end %>
</div>

<div class="row">
  <div class="col-sm-3">
    <div class="form-group">
      <h4>Add a Skill</h4>
      <label for="skill-nickname">Nickname</label>
      <input class="form-control" type="text" id="skill-nickname">
      <label for="skill-description">Description</label>
      <input class="form-control" type="text" id="skill-description">
      <input type="hidden" name="skill-user" id="skill-user" value="<%= current_user.id %>">
    </div>
    <input class="btn btn-default pull-right" id="create-skill" type="button" name="submit" value="Add Skill">
  </div>
  <div class="col-sm-2"></div>
</div>

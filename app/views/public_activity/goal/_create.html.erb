<div class="col-sm-12">

    <% if a.trackable && a.trackable.skill.user.image && following.exists?(a.trackable.skill.user) %>
      <p class="actvity-item">

        <%= image_tag a.trackable.skill.user.image, class: "profile-photo"%>
        <%= link_to a.trackable.username, user_path(a.trackable.skill.user.nickname)%> added a goal of
        <%= a.trackable.num_sessions %>
        <%= a.trackable. session_length%> minute session(s) for the following skill:
        <%= a.trackable.skill.nickname %> <%= days_from_today a.trackable.updated_at%> ago.
      </p>
    <% end %>
</div>
